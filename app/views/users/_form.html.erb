<%= form_with(model: @user) do |f| %>

    <%= render "shared/errors", object: @user %>
  
    <%= f.label :name %>
    <%= f.text_field :name %>
  
    <%= f.label :email %>
    <%= f.text_area :email %>
  
    <%= f.label :password %>
    <%= f.password_field :password %>
  
    <%= f.label :password_confirmation, "confirm password" %>
    <%= f.password_field :password_confirmation %>
  
  
  
    <%= f.submit %>
  <% end %>